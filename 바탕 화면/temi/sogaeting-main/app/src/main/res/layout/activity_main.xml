<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/component2">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRollDice"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="주사위 돌리기"
        android:textColor="#ff211b"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/maplestory_bold"
        android:layout_marginBottom="80dp"

        android:gravity="center"

        android:background="@drawable/bg_white_round"

        android:elevation="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvDiceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="?"
        android:textSize="150sp"
        android:textStyle="bold"
        android:fontFamily="@font/maplestory_bold"
        android:textColor="#ff211b"
        app:layout_constraintBottom_toTopOf="@+id/tvPosition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 칸: 0"
        android:textSize="50sp"
        android:textColor="#ff211b"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/maplestory_bold"


        app:layout_constraintTop_toBottomOf="@+id/tvDiceValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnRollDice" />

</androidx.constraintlayout.widget.ConstraintLayout>